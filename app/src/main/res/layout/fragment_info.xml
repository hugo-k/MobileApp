<!-- res/layout/fragment_shop_info.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopInfoCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="680dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image de la boutique (à gauche) -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_gps_fixed_24" />

        <!-- Informations sur la boutique (à droite) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtContainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Container name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp" />

            <!-- Autres informations sur la boutique -->
            <!-- Vous pouvez ajouter plus de TextView ici pour afficher d'autres informations -->

        </LinearLayout>

    </LinearLayout>

    <!-- Bouton de fermeture -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:id="@+id/btnDirection" />

</androidx.cardview.widget.CardView>
